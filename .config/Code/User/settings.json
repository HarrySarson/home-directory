{
    "C_Cpp.clang_format_style": "LLVM",
    "C_Cpp.default.compilerArgs": [
        "-Wall",
        "-Wextra"
    ],
    "C_Cpp.updateChannel": "Insiders",
    "[c]": {
        "editor.defaultFormatter": "ms-vscode.cpptools",
        "editor.formatOnSave": false
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.wordWrap": "wordWrapColumn"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[makefile]": {
        "editor.tabSize": 8
    },
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.python",
        "editor.wordWrap": "wordWrapColumn"
    },
    "[rust]": {
        "editor.formatOnSave": true,
        "editor.wordWrapColumn": 99
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "cSpell.diagnosticLevel": "Hint",
    "cSpell.language": "en-GB",
    "cSpell.userWords": [
        "MEMS",
        "Purves",
        "Vauxhall",
        "basestation",
        "datasheet",
        "harrysarson",
        "kalman",
        "tagger"
    ],
    "diffEditor.renderSideBySide": true,
    "editor.fastScrollSensitivity": 8,
    "editor.find.addExtraSpaceOnTop": true,
    "editor.fontSize": 15,
    "editor.minimap.maxColumn": 80,
    "editor.minimap.renderCharacters": false,
    "editor.mouseWheelScrollSensitivity": 3,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "none",
    "editor.rulers": [
        80,
        100
    ],
    "editor.scrollBeyondLastColumn": 0,
    "editor.tabSize": 2,
    "editor.wordWrapColumn": 100,
    "elmLS.elmAnalyseTrigger": "never",
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoSave": "onFocusChange",
    "files.autoSaveDelay": 100,
    "files.exclude": {
        "**/.venv": true
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.openDiffOnClick": false,
    "git.rebaseWhenSync": true,
    "gitlens.currentLine.scrollable": false,
    "gitlens.views.repositories.files.layout": "tree",
    "go.useLanguageServer": true,
    "javascript.format.semicolons": "insert",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "prettier.bracketSpacing": false,
    "prettier.printWidth": 100,
    "prettier.singleQuote": true,
    "prettier.useTabs": true,
    "python.formatting.provider": "yapf",
    "python.linting.flake8Enabled": true,
    "rewrap.wrappingColumn": 79,
    "rust-client.updateOnStartup": true,
    "rust.clippy_preference": "on",
    "terminal.integrated.shellArgs.linux": [
        "-i"
    ],
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Solarized Dark",
    "workbench.editor.enablePreview": false,
    "workbench.editor.showTabs": false,
    "workbench.sideBar.location": "left",
    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false,
    "editor.fontFamily": "'DejaVu Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "elmLS.elmPath": "/usr/local/bin/elm-0.19.1",
    "elmLS.elmFormatPath": "/usr/local/bin/elm-format-0.8.3",
    "rust-analyzer.notifications.cargoTomlNotFound": false,
    "editor.acceptSuggestionOnEnter": "off",
    "rust-analyzer.checkOnSave.command": "clippy"
}
