# This is Git's per-user configuration file.
[user]
	name = Harry Sarson
	email = harry.sarson@hotmail.co.uk
	signingkey = B7EEBA5DE4B5CB3A
[credential]
	helper = store --file ~/.git-credentials
[alias]
	lg = "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
	b = branch
	r = remote
	s = status
	dc = diff --cached
	cdgd = !cd `git rev-parse --git-dir`/..
[core]
	excludesfile = /home/harry/.gitignore_global
	fileMode = false
	# Make paging work with two line prompt
	pager = "(printf '\n'; cat) | less -FRX"
[commit]
	gpgsign = true
[push]
	default = simple
